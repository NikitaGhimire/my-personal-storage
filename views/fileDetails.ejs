<!-- views/fileDetails.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Details</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>File Details</h1>
    <p><strong>Filename:</strong> <%= file.filename %></p>
    <p><strong>File Path:</strong> <%= file.filePath %></p>
    <p><strong>MIME Type:</strong> <%= file.mimeType %></p>
    
    <!-- Download button -->
    <a href="/file/<%= file.id %>/download"><button>Download</button></a>
    <!-- Optionally include a delete button -->
    <form action="/file/<%= file.id %>/delete" method="POST" style="display:inline;">
        <button type="submit">Delete</button>
</body>
</html>
